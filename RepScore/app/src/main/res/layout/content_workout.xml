<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".WorkoutActivity"
        tools:showIn="@layout/activity_workout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingTop="10dp"
            android:paddingRight="24dp"
            >

            <!--        <ImageView-->
            <!--            android:layout_width="wrap_content"-->
            <!--            android:layout_height="250dp"-->
            <!--            android:layout_gravity="center_horizontal"-->
            <!--            android:layout_marginBottom="24dp"-->
            <!--            android:src="@drawable/logo_black" />-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Add a workout exercise"
                android:textSize="25sp" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_shadow"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="Bench Press"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Compound lift"
                    android:textSize="15sp" />



                <Button
                    android:id="@+id/buttonShowCustomDialog"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orangeRed"
                    android:layout_margin="2dp"
                    android:onClick="btn_add"
                    android:textColor="@color/white"
                    android:text="Voeg 1RM toe"
                    android:textSize="20dp"
                    android:drawableLeft="@android:drawable/ic_input_add"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_shadow"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="Decline bench press"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Compound lift for lower chest"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_addworkout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orangeRed"
                    android:layout_margin="2dp"
                    android:textColor="@color/white"
                    android:text="Voeg 1RM toe"
                    android:textSize="20dp"
                    android:drawableLeft="@android:drawable/ic_input_add"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_shadow"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="Dumbell Press"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Bench press with dumbells"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_addworkout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orangeRed"
                    android:layout_margin="2dp"
                    android:textColor="@color/white"
                    android:text="Voeg 1RM toe"
                    android:textSize="20dp"
                    android:drawableLeft="@android:drawable/ic_input_add"
                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/border_shadow"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="Incline Bench Press"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Compound lift with use of shoulders"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_addworkout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/orangeRed"
                    android:layout_margin="2dp"
                    android:textColor="@color/white"
                    android:text="Voeg 1RM toe"
                    android:textSize="20dp"
                    android:drawableLeft="@android:drawable/ic_input_add"
                    />


            </LinearLayout>






        </LinearLayout>

    </ScrollView>